<!-- standard header import and link to relevant css files-->
<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <!-- standard navigation import-->
    <%- include('../includes/navigation.ejs') %>

    <main>
        <!--provides feedback flash message based on input-->
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <!-- display field for password entry by user-->
        <form class="login-form" action="/new-password" method="POST">
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password">
            </div>
             <!-- display submit button to update password, will also assign values for userId, passwordToken, and csrfToken-->
             <input type="hidden" name="userId" value="<%= userId %>">
             <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
             <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Update Password</button>
        </form>
    </main>
 <!-- standard footer import-->    
<%- include('../includes/end.ejs') %>